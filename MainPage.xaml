<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="blitz_chat.MainPage">

    <StackLayout VerticalOptions="Start" Padding="20" Spacing="10">
        <Label TextColor="#006385">Prijava</Label>
        <Entry Placeholder="Username"/>
        <Entry Placeholder="Password" IsPassword="True"/>
        <Button x:Name="LoginButton" Text="Login" Clicked="OnLoginButtonClicked"/>
        <Button x:Name="RegistracijaButton" Text="Registracija"/>
    </StackLayout>

</ContentPage>
