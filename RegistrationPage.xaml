<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="blitz_chat.RegistrationPage"
             Title="RegistrationPage">
      
    
    <StackLayout VerticalOptions="Start" Padding="20" Spacing="10">
        <Label TextColor="#006385">Registracija</Label>
        <Entry Text="{Binding email}" Placeholder="Email"/>
        <Entry Text="{Binding geslo}" Placeholder="Password" IsPassword="True" />
        <Button Text="Registracija" Command="{Binding RegistracijaUporabnika}" />
    </StackLayout>

    
</ContentPage>