<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="blitz_chat.RegistrationPage"
             Title="Registracijska stran">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Frame Background="Black" CornerRadius="0" Margin="-20,-19,-20,0">
            <StackLayout Grid.Row="0" BackgroundColor="Teal" Margin="0,0,0,-17.5" Padding="10,5,10,5" Orientation="Horizontal">
                <Label FontSize="Subtitle" FontAttributes="Bold" Text="Blitzchat" TextColor="White" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand" Padding="0,5,0,5"/>
            </StackLayout>
        </Frame>


        <StackLayout Grid.Row="1" VerticalOptions="Start" Padding="30" Margin="0,20,0,0" Spacing="10">
            <Entry x:Name="EmailEntry" Placeholder="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
            <Entry x:Name="PasswordEntry2" Placeholder="Repeat Password" IsPassword="True"/>

            <Button Text="Register" Clicked="RegisterButton_Clicked" Margin="0,50,0,0"/>
        </StackLayout>
    </Grid>
</ContentPage>
