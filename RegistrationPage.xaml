<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="blitz_chat.RegistrationPage"
             Title="Registracijska stran">

    <StackLayout VerticalOptions="Start" Padding="20" Spacing="10">
        <Label TextColor="Black">Registracija</Label>
        <Entry x:Name="EmailEntry" Placeholder="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Entry x:Name="PasswordEntry2" Placeholder="Repeat Password" IsPassword="True" />
        <Button Text="Register" Clicked="RegisterButton_Clicked" />
    </StackLayout>

</ContentPage>
